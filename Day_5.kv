#:kivy 1.11.1
<MyGridLayout>

    name:name
    pizza:pizza
    color:color

    GridLayout:
        cols:1
        size: root.width,root.height
        GridLayout:
            cols:2
            Label:
                text: "Name"
            TextInput:
                id:name
                multiline: False
            Label:
                text: "Favourite Pizza"
            TextInput:
                id: pizza
                multiline: False
            Label:
                text: "Favourite Colour"
            TextInput:
                id: color
                multiline: False
        Button:
            text: "Submit"
            font_size: 32
            on_press: root.press()
