#:kivy 1.11.1

<Button>
    size_hint: (0.2,0.2)
    font_size: 32
<Calculator>
    BoxLayout:
        orientation: "vertical"
        size: root.width,root.height

        TextInput:
            id: calc_input
            text: "0"
            halign: "right"
            font_size: 65
            size_hint: (1,.15)
            multiline: False

        GridLayout:
            rows: 5
            cols: 4

            Button:
                text: "%"
            Button:
                text: "CE"
            Button:
                id: 'clear'
                text: "C"
                on_press: root.clear()
            Button:
                text: "/"

            Button:
                text: "7"
                background_color: (157/255,157/255,157/255,1)
            Button:
                text: "8"
                background_color: (157/255,157/255,157/255,1)
            Button:
                text: "9"
                background_color: (157/255,157/255,157/255,1)
            Button:
                text: "x"

            Button:
                text: "4"
                background_color: (157/255,157/255,157/255,1)
            Button:
                text: "5"
                background_color: (157/255,157/255,157/255,1)
            Button:
                text: "6"
                background_color: (157/255,157/255,157/255,1)
            Button:
                text: "-"

            Button:
                text: "1"
                background_color: (157/255,157/255,157/255,1)
            Button:
                text: "2"
                background_color: (157/255,157/255,157/255,1)
            Button:
                text: "3"
                background_color: (157/255,157/255,157/255,1)
            Button:
                text: "+"

            Button:
                text: "+/-"
                background_color: (157/255,157/255,157/255,1)
            Button:
                text: "0"
                background_color: (157/255,157/255,157/255,1)
            Button:
                text: "."
                background_color: (157/255,157/255,157/255,1)
            Button:
                text: "="