#:kivy 1.11.1
#:import utils kivy.utils
<MyGridLayout>
    name: name
    pizza: pizza
    color: color
    GridLayout:
        cols:1
        size: root.width,root.height
        GridLayout:
            cols:2
            Label:
                text: "Name"
            TextInput:
                id: name
                multiline: False
                background_color: (1,0,0,1)
            Label:
                text: "Favourite Pizza"
            TextInput:
                id: pizza
                multiline: False
            Label:
                text: "Color"
            TextInput:
                id: color
                multiline: False
        Button:
            text: "Submit"
            font_size: 32
            on_press: root.press()
            background_normal: ""
            # background_color: (1,0,0,1)
            background_color: utils.get_color_from_hex("#34eb9e")
            
                