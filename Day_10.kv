#:kivy 1.11.1
<MyLayout>
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        padding: 10
        spacing: 2

        Label:
            text: "Name"
            font_size: 28
            background_color: (48/255, 240/255, 211/255,1)
            canvas.before:
                Color:
                    rgba:self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos
            color: (0,1,0,1)
            bold: True
            italic: True
            outline_color: (0,0,1)
            outline_width: 10
        TextInput:
            multiline: False
        Button:
            text: "Submit"
            background_normal: ""
            background_color: (0,1,0,0.5)
            